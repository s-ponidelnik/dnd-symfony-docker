{% extends 'base.html.twig' %}

{% block title %}CharacterClass index{% endblock %}

{% block body %}
    <h1>CharacterClass index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Identifier</th>
                <th>NameEn</th>
                <th>NameRu</th>
                <th>DescriptionEn</th>
                <th>DescriptionRu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for character_class in character_classes %}
            <tr>
                <td>{{ character_class.id }}</td>
                <td>{{ character_class.identifier }}</td>
                <td>{{ character_class.nameEn }}</td>
                <td>{{ character_class.nameRu }}</td>
                <td>{{ character_class.descriptionEn }}</td>
                <td>{{ character_class.descriptionRu }}</td>
                <td>
                    <a href="{{ path('character_class_show', {'id': character_class.id}) }}">show</a>
                    <a href="{{ path('character_class_edit', {'id': character_class.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('character_class_new') }}">Create new</a>
{% endblock %}
